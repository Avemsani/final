<h1>Answers</h1>

<p><a href="/new_answer">Add a New Answer</a></p>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Question</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @answers.each do |answer| %>
    <tr>
          <td><%= answer.caption %></td>
          <td><%= answer.question_id %></td>
          <td><a href="/answers/<%= answer.id %>">Show</a>
        </td>
      <td><a href="/answers/<%= answer.id %>/edit">Edit</a></td>
      <td><a href="/answers/<%= answer.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

